@inject GameService gameService

<!-- Create a 15x15 game field -->
<div class="game_field">
    <table class="table">
        <tbody>
        @for (int row = 0; row < 15; row++)
        {
            <tr class="row">
                @for (int i = 0; i < 15; i++)
                {
                    <td class="game_cell">
                        <!-- Pass the row and column indices to the Cell component -->
                        <Cell ID="GetID(row, i)" OnClick="PrintClicked"></Cell>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
</div>

@code {
    protected override void OnInitialized()
    {
        Console.WriteLine("GameField initialized");
    }

    private int[] GetID(int row, int column)
    {
        return new int[] { row, column };
    }

    private void PrintClicked(int[] ID)
    {
        Console.WriteLine($"The cell {ID[0]}, {ID[1]} has been clicked (from GameField.razor)");
    }
}
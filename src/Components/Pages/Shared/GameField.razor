@using TourDeApp.Models
@using TourDeApp.Models.Schemas
@inject GameService GameService

<span class="game_field">
    <table class="table">
        <tbody>
            @for (int row = 0; row < Game.BoardState.Size; row++)
            {
                <tr>
                    @for (int column = 0; column < Game.BoardState.Size; column++)
                    {
                        <td class="game_cell">
                            <Cell CellInstance="Game.BoardState.Board[row, column]" OnClick="ChangeCellState"></Cell>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</span>

@code {

    [Parameter, EditorRequired] public Game Game { get; set; }

    [Parameter] public EventCallback OnWin { get; set; }
    
    [Parameter] public EventCallback ReRender { get; set; }
    
    protected override void OnInitialized()
    {
    }

    private void ChangeCellState(TourDeApp.Models.Schemas.Cell cell)
    {
        if (cell.State != CellState.Empty) return;

        GameState gameState = Game.GameState;
        
        Game.UpdateBoard(cell);

        if (gameState != Game.GameState) ReRenderParent();
        
        if (Game.CheckWin())
        {
            Win();
        }
    }

    private async Task ReRenderParent()
    {
        await ReRender.InvokeAsync();
    }
    
    private async Task Win()
    {
        await OnWin.InvokeAsync();
    }

}